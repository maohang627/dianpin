<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopcart_none_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <!-- 购物车列表展现 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="购物车中还没有商品，赶快去添加吧！" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <!-- 我也要开店 -->

        <TextView
            android:id="@+id/shopcart_will_open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/azure"
            android:text="我也要开店" 
            android:visibility="gone" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- 一条红线 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/yhd_red" />
    </LinearLayout>

    <!-- 底部内容 -->

    <LinearLayout
        android:id="@+id/shopcart_product_buttom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopcart_totalprice_label" />

            <TextView
                android:id="@+id/shopcart_totalprice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:textColor="@color/yhd_red" />
        </LinearLayout>

        <!-- 去结算 -->

        <TextView
            android:id="@+id/shopcart_bottom_toPay_text"
            style="@style/style_17_FFFFFF_BOLD"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_qujiesuan"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

</LinearLayout>