            <solid android:color="@color/gray_f5f5f5" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="0.6dp" android:color="@color/coffee" />

            <solid android:color="@android:color/white" />
        </shape></item>

</selector>